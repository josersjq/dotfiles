        {
            "depends-on": [],
            "name": "vim-javascript",
            "pkg-url": "https://github.com/pangloss/vim-javascript.git",
            "recipe": {}
        },
        {
            "depends-on": [
                {
                    "name": "flake8",
                    "recipe": {
                        "linux": [
                            "pip install --user flake8"
                        ]
                    }
                },
                {
                    "name": "eslint",
                    "recipe": {
                        "linux": [
                            "npm install -g eslint"
                        ]
                    }
                }
            ],
            "name": "ale",
            "pkg-url": "https://github.com/w0rp/ale.git",
            "recipe": {}
        }
    ]
